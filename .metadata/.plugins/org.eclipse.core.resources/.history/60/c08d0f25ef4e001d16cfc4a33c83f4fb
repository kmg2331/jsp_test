package user;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import utl.JDBCutil;

public class UserDAO {
	
	Connection conn = null;
	PreparedStatement ps = null;
	ResultSet rs = null;
	JDBCutil jdbcUtil = null;
	
	public UserDAO() {
		this.jdbcUtil = new JDBCutil();
	}
	
	public UserVO login(String id, String pw){
		String query = "select user_id, user_pw from tbl_user "
				+ "where user_id = ? and user_pw = ?";
		UserVO result = null;
		
		try {
			conn = jdbcUtil.getConnection();
			ps = conn.prepareStatement(query);
			ps.setString(1, id);
			ps.setString(2, pw);
			rs = ps.executeQuery();
			
			if(rs.next()) {
				result = new UserVO();
				result.setUserId(rs.getString(1));
				result.setUserPw(rs.getString(2));
				System.out.println("로그인 성공");
			} else { System.out.println("로그인 실패");}
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			try {
				if(conn != null) {
					conn.close();
				}
				if(ps != null) {
					ps.close();
				}
				if(rs != null) {
					rs.close();
				}
				
				} catch (SQLException e) {
				e.printStackTrace();
			}
		}
		
		return result;
	}
	
	public boolean joinUser(UserVO userVO) {
		String query = "insert into tbl_user (user_id, user_pw) values"
				+ "(?, ?)";
		boolean result = true;
		
		if(check(userVO.getUserId()) == -1) {
			result = false;
			System.out.println("회원가입 실패");
			return result;
		}
		
		try {
			conn = jdbcUtil.getConnection();
			ps = conn.prepareStatement(query);
			ps.setString(1, userVO.getUserId());
			ps.setString(2, userVO.getUserPw());
			ps.executeLargeUpdate();
			System.out.println("회원가입 성공");
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			try {
				if(conn != null) {
					conn.close();
				}
				if(ps != null) {
					ps.close();
				}
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
		return result;
		
	}
	
	public int getUserNumber(String id) {
		String query = "select user_number from tbl_user where user_id = ?";
		int result = 0;
		
		try {
			conn = jdbcUtil.getConnection();
			ps = conn.prepareStatement(query);
			ps.setString(1, id);
			rs = ps.executeQuery();
			
			if(rs.next()) {
				result = rs.getInt(1);
			}
			
		} catch (SQLException e) {
			System.out.println();
			e.printStackTrace();
		} finally {
			try {
				if(conn != null) {
					conn.close();
				}
				if(ps != null) {
					ps.close();
				}
				if(rs != null) {
					rs.close();
				}
				
				} catch (SQLException e) {
				e.printStackTrace();
			}
		}
		
		return result;
	}
	
	public int check(String id) {
		String query = "select * from tbl_user where user_id = ?";
		int result = 0;
		
		try {
			conn = jdbcUtil.getConnection();
			ps = conn.prepareStatement(query);
			ps.setString(1, id);
			rs = ps.executeQuery();
			
			if(rs.next()) {
				result = -1;
			}
			
		} catch (SQLException e) {
			System.out.println();
			e.printStackTrace();
		} finally {
			try {
				if(conn != null) {
					conn.close();
				}
				if(ps != null) {
					ps.close();
				}
				if(rs != null) {
					rs.close();
				}
				
				} catch (SQLException e) {
				e.printStackTrace();
			}
		}
		
		return result;
	}
}
