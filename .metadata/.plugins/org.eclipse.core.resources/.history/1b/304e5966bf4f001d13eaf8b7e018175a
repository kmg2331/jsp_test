<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
 <%@ page import="java.util.ArrayList" %>
 <%@ page import="article.ArticleVO" %>
 <%@ page import="java.io.PrintWriter" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
		<!-- 해야할 것 : aritcle목록으로 가져오기 -->
	<% 
		ArrayList<ArticleVO> arr =(ArrayList<ArticleVO>) request.getAttribute("articles");
		int arrIndex = 0;
		out.println("<ol>게시글 목록 리스트");
		while(arrIndex < arr.size()){
			out.println("<li>");
			out.print("제목 : " + arr.get(arrIndex).getTitle() + "\t");
			out.print(arr.get(arrIndex).getContent() + "\t");
			out.println("</li>");
			arrIndex++;
		}
		out.println("</ol>");
		out.close();
	%>
	<!-- 
		view에 출력 후 해당 article 내용이 보이도록 하기
		쿠키 설정하기
		
	 -->
</body>
